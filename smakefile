OBJECTS=petrobots.o Platform.o PlatformAmiga.o PlatformAmigaAssembler.o PT2.3F_replay_cia.o PETFont.o Tiles.o Music.o

all: petrobots 

petrobots: $(OBJECTS)
   sc link to petrobots with <<
$(OBJECtS)
<

petrobots.o: petrobots.cpp
Platform.o: Platform.cpp
PlatformAmiga.o: PlatformAmiga.cpp
PlatformAmigaAssembler.o: PlatformAmigaAssembler.s
PT2.3F_replay_cia.o: PT2.3F_replay_cia.s
PETFont.o: PETFont.raw
    Bin2Hunk PETFont.raw PETFont.o NAME _petFont HUNK data
Tiles.o: Tiles.raw
    Bin2Hunk Tiles.raw Tiles.o NAME _tilesPlanes CHIP
Music.o: mod.petrobots
    Bin2Hunk mod.petrobots Music.o NAME _music CHIP

clean:
    delete $(OBJECTS) petrobots petrobots.info petrobots.lnk
